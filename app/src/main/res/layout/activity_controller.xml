<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/controller_button1"
        android:layout_centerVertical="true"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <a383.quadrocopter.widget.VerticalSeekBar
        android:id="@+id/controller_seekbar"
        android:layout_toRightOf="@id/controller_button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/controller_button2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/controller_seekbar"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <Button
        android:id="@+id/controller_button3"
        android:background="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:layout_width="128dp"
        android:layout_height="64dp" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/controller_button4"
        android:background="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:layout_width="128dp"
        android:layout_height="64dp" />

    <Button
        android:id="@+id/controller_button5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:id="@+id/controller_crossLayout"
        android:layout_toLeftOf="@id/controller_button5"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/controller_button6"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <View
            android:layout_width="64dp"
            android:layout_height="64dp"/>

        <Button
            android:id="@+id/controller_button7"
            android:layout_width="64dp"
            android:layout_height="64dp" />
    </LinearLayout>

    <Button
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/controller_crossLayout"
        android:id="@+id/controller_button8"
        android:layout_width="64dp"
        android:layout_height="64dp" />
</RelativeLayout>